<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape
            android:shape="rectangle"
            android:useLevel="true"
            >

            <solid android:color="#FFF"/>
            <corners android:radius="2dp"/>
            <stroke
                android:width="2dp"
                android:color="#FFF"/>

            <padding
                android:bottom="10dp"
                android:left="10dp"
                android:right="10dp"
                android:top="10dp"/>
        </shape>
    </item>


</selector>